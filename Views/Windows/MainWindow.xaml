<Window x:Class="TinkoffPriceMonitor.Views.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"

        Width="400"
        Height="600"
        ResizeMode="CanResizeWithGrip"
        WindowStyle="SingleBorderWindow"
        WindowStartupLocation="CenterScreen"
        >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" Background="#2B3A42" Padding="10">
            <TextBlock Text="Tinkoff Price Monitor" FontSize="20" Foreground="White"/>
        </Border>

        <!-- Основное содержимое -->
        <TabControl Grid.Row="1">
            <!-- Вкладка с выводом сообщений -->
            <TabItem Header="Монитор">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                    <StackPanel Margin="10" Name="messageStackPanel">
                        <TextBlock Text="Сообщения о изменении цены" FontSize="16" FontWeight="Bold" Margin="0 0 0 10"/>

                        <!-- Пример элементов управления для вывода сообщений -->
                        <ItemsControl ItemsSource="{Binding PriceChangeMessages}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Margin="0 0 0 5">
                                        <TextBlock Text="{Binding Path=InstrumentName}" FontWeight="Bold"/>
                                        <TextBlock Text="{Binding Path=MessageText}" TextWrapping="Wrap"/>
                                        <Separator/>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>


            <!-- Вкладка с настройками -->
            <TabItem Header="Настройки">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="149*"/>
                        <RowDefinition Height="76*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Настройки" FontSize="16" FontWeight="Bold" Margin="10,10,10,10"/>

                    <!-- Группа 1 -->
                    <StackPanel Grid.Row="1" Margin="10,10,10,10">
                        <TextBlock Text="Группа тикеров №1" FontWeight="Bold"/>
                        <TextBox Text="{Binding Path=TickerGroup1, Mode=TwoWay}"/>
                        <TextBlock Text="Процент изменения цены"/>
                        <TextBox Text="{Binding Path=PercentageThresholdGroup1, Mode=TwoWay}"/>
                        <TextBlock Text="Временной интервал"/>
                        <TextBox Text="{Binding Path=IntervalGroup1, Mode=TwoWay}"/>
                    </StackPanel>

                    <!-- Группа 2 -->
                    <StackPanel Grid.Row="2" Margin="10,10,10,10">
                        <TextBlock Text="Группа тикеров №2" FontWeight="Bold"/>
                        <TextBox Text="{Binding Path=TickerGroup2, Mode=TwoWay}"/>
                        <TextBlock Text="Процент изменения цены"/>
                        <TextBox Text="{Binding Path=PercentageThresholdGroup2, Mode=TwoWay}"/>
                        <TextBlock Text="Временной интервал"/>
                        <TextBox Text="{Binding Path=IntervalGroup2, Mode=TwoWay}"/>
                    </StackPanel>

                    <!-- Группа 3 -->
                    <StackPanel Grid.Row="3" Margin="10,10,10,10" Grid.RowSpan="2">
                        <TextBlock Text="Группа тикеров №3" FontWeight="Bold"/>
                        <TextBox Text="{Binding Path=TickerGroup3, Mode=TwoWay}"/>
                        <TextBlock Text="Процент изменения цены"/>
                        <TextBox Text="{Binding Path=PercentageThresholdGroup3, Mode=TwoWay}"/>
                        <TextBlock Text="Временной интервал"/>
                        <TextBox Text="{Binding Path=IntervalGroup3, Mode=TwoWay}"/>
                    </StackPanel>

                    <Button
                        Grid.Row="4"
                        Content="Сохранить настройки"
                        Margin="10,10,10,10"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
